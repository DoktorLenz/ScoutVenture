{
  "root": true,
  "ignorePatterns": ["projects/**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": ["angular/tsconfig.json", "angular/cypress/tsconfig.json"]
      },
      "plugins": [
        "deprecation",
        "jasmine",
        "import",
        "cypress",
        "testing-library"
      ],
      "env": {
        "jasmine": true
      },
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates",
        "plugin:jasmine/recommended",
        "plugin:import/recommended",
        "plugin:cypress/recommended",
        "plugin:testing-library/angular"
      ],
      "rules": {
        "max-len": [
          "error",
          {
            "code": 110
          }
        ],
        "deprecation/deprecation": "warn",
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "sv",
            "style": "kebab-case"
          }
        ],
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": ["src/**/*.spec.ts"]
          }
        ]
      }
    },
    {
      "files": ["cypress/**/*.ts", "cypress.config.ts"],
      "parserOptions": {
        "project": ["cypress/tsconfig.json"]
      },
      "plugins": ["deprecation", "import", "cypress", "testing-library"],
      "env": {
        "jasmine": true
      },
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates",
        "plugin:jasmine/recommended",
        "plugin:import/recommended",
        "airbnb-typescript/base",
        "plugin:cypress/recommended",
        "plugin:testing-library/angular"
      ],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": ["cypress/**/*.ts", "cypress.config.ts"]
          }
        ],
        "testing-library/prefer-screen-queries": "off",
        "testing-library/await-async-query": "off"
      }
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@angular-eslint/template/recommended"],
      "rules": {
        "max-len": [
          "error",
          {
            "code": 110
          }
        ]
      }
    }
  ]
}
