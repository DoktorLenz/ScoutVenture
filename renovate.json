{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "groupName": "angular eslint packages",
      "matchPackagePatterns": [
        "^@angular-eslint/",
        "^@typescript-eslint/",
        "^eslint-plugin-"
      ],
      "matchPackageNames": [
        "eslint",
        "eslint-config-airbnb-typescript"
      ]
    },
    {
      "groupName": "angular main packages",
      "matchPackagePatterns": [
        "^angular/"
      ]
    },
    {
      "groupName": "angular prime packages",
      "matchPackageNames": [
        "primeicons",
        "primeng",
        "primeflex"
      ]
    },
    {
      "groupName": "angular testing packages",
      "matchPackageNames": [
        "ng-mocks",
        "@badeball/cypress-cucumber-preprocessor",
        "@types/jasmine",
        "@types/testing-library__jasmine-dom",
        "cypress",
        "jasmine-core"
      ],
      "matchPackagePatterns": [
        "^@cypress/",
        "^@testing-library/",
        "^karma"
      ]
    }
  ]
}