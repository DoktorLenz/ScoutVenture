{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "* 4-6 * * *"
  ],
  "prHourlyLimit": 4,
  "packageRules": [
    {
      "matchManagers": [
        "npm"
      ],
      "addLabels": [
        "npm dependency"
      ]
    },
    {
      "matchManagers": [
        "maven",
        "maven-wrapper"
      ],
      "addLabels": [
        "maven dependency"
      ]
    },
    {
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "addLabels": [
        "docker image version"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "github action version"
      ]
    },
    {
      "groupName": "angular eslint packages",
      "matchPackagePatterns": [
        "^@angular-eslint/",
        "^@typescript-eslint/",
        "^eslint-plugin-"
      ],
      "matchPackageNames": [
        "eslint",
        "eslint-config-airbnb-typescript"
      ],
      "automerge": true,
      "automergeSchedule": "* 7-9 * * *"
    },
    {
      "groupName": "angular main packages",
      "matchPackagePatterns": [
        "^angular/"
      ]
    },
    {
      "groupName": "angular prime packages",
      "matchPackageNames": [
        "primeicons",
        "primeng",
        "primeflex"
      ]
    },
    {
      "groupName": "angular testing packages",
      "matchPackageNames": [
        "ng-mocks",
        "@badeball/cypress-cucumber-preprocessor",
        "@types/jasmine",
        "@types/testing-library__jasmine-dom",
        "cypress",
        "jasmine-core"
      ],
      "matchPackagePatterns": [
        "^@cypress/",
        "^@testing-library/",
        "^karma"
      ],
      "automerge": true,
      "automergeSchedule": "* 7-9 * * *"
    }
  ]
}