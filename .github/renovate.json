{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices"
    ],
    "labels": [
        "renovate"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin"
            ],
            "matchManagers": [
                "dockerfile",
                "docker-compose"
            ],
            "automerge": true,
            "addLabels": [
                "automerge"
            ]
        },
        {
            "matchPackagePatterns": [
                "^@angular/"
            ],
            "rangeStrategy": "auto",
            "automerge": true,
            "addLabels": [
                "automerge"
            ]
        }
    ]
}