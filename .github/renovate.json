{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices"
    ],
    "recreateWhen": "always",
    "labels": [
        "renovate"
    ],
    "packageRules": [
        {
            "groupName": "Docker",
            "matchDatasources": [
                "docker"
            ],
            "automerge": true,
            "addLabels": [
                "automerge"
            ]
        },
        {
            "groupName": "Github Actions",
            "matchManagers": [
                "github-actions"
            ],
            "automerge": true,
            "addLabels": [
                "automerge"
            ]
        }
    ]
}