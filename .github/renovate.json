{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices"
    ],
    "recreateWhen": "always",
    "labels": [
        "renovate"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin"
            ],
            "automerge": true,
            "addLabels": [
                "automerge"
            ]
        },
        {
            "groupName": "Docker",
            "matchDatasources": [
                "docker"
            ]
        },
        {
            "groupName": "Github Actions",
            "matchManagers": [
                "github-actions"
            ]
        },
        {
            "groupName": "Angular - Main",
            "matchPackagePatterns": [
                "^@angular/",
                "^@angular-eslint/"
            ]
        },
        {
            "groupName": "Angular - Testing",
            "matchPackageNames": [
                "ng-mocks",
                "@badeball/cypress-cucumber-preprocessor",
                "@types/jasmine",
                "@types/testing-library__jasmine-dom",
                "jasmine-core",
                "cypress"
            ],
            "matchPackagePatterns": [
                "^@cypress/",
                "^@testing-library/",
                "^karma",
                "^eslint"
            ]
        }
    ]
}